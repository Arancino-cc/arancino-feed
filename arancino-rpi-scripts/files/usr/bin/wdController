#!/bin/ash

# wdController v1.3

ubus call system watchdog '{"magicclose": true}'
ubus call system watchdog '{"stop": true}'

while lsblk -d /dev/sda -f --output NAME,TYPE,STATE | grep disk > /dev/null; do

   # date 1>&2
   echo -n "X"
   sleep 3

done > /dev/watchdog

echo "Reboot after IO failure" 1>&2
